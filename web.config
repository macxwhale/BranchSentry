<configuration>
  <system.webServer>
    <handlers>
      <!-- Make sure the path is relative to your site root -->
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="next-js">
          <match url="/*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- 
      You may need to configure the iisnode element below, e.g., to enable logging.
      For more details, see https://github.com/Azure/iisnode/blob/master/src/samples/configuration/web.config
    -->
    <!--
    <iisnode
      node_env="production"
      nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;"
      loggingEnabled="true"
      devErrorsEnabled="true"
    />
    -->

  </system.webServer>
</configuration>
